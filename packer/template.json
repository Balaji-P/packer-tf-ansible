{
  "variables": {
    "var_key_json": "{{ env `KEY_JSON` }}",
    "var_project_id": "{{ env `PROJECT` }}",
    "var_zone": "{{ env `ZONE` }}",
    "var_image": "{{ env `IMAGE_PACKER` }}",
    "var_image_description": "{{ env `IMAGE_DESCR` }}",
    "var_size": "{{ env `MACHINE_TYPE` }}",
    "var_ansible_script": "{{ env `ANSIBLE_SCRIPT_PATH` }}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "ssh_username": "packer",
      "account_file": "{{ user `var_key_json` }}",
      "project_id": "{{ user `var_project_id` }}",
      "source_image": "{{ user `var_image` }}",
      "machine_type": "{{ user `var_size` }}",
      "zone": "{{ user `var_zone` }}",
      "image_description": "{{ user `var_image_description` }}",
      "startup_script_file": "{{ user `var_ansible_script` }}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "command": "scripts/call_ansible.sh"
      "playbook_file": "../ansible/site.yml",
      "role_paths": [
        "../ansible/roles/git",
        "../ansible/roles/mysql",
        "../ansible/roles/nginx",
        "../ansible/roles/growlerfriday"
      ],
      "group_vars": "../ansible/group_vars"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
